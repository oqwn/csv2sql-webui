{
  "source": {
    "type": "mssql",
    "connection": "mssql_connection_string"
  },
  "target": {
    "type": "kafka",
    "bootstrap_servers": "localhost:9092",
    "topics": [
      "sample_topic"
    ],
    "group_id": "etl_test_group"
  },
  "transformation": {
    "type": "split_column",
    "config": "split_column_specific_config"
  },
  "options": {
    "batch_size": 1000,
    "error_handling": "continue",
    "logging_level": "INFO"
  }
}