{
  "source": {
    "type": "rest_api",
    "base_url": "https://api.example.com",
    "endpoint": "/data",
    "auth_type": "bearer",
    "pagination": "offset"
  },
  "target": {
    "type": "mysql",
    "host": "localhost",
    "port": 3306,
    "database": "source_db",
    "username": "root",
    "password": "password",
    "table": "sample_data"
  },
  "transformation": {
    "type": "merge_column",
    "config": "merge_column_specific_config"
  },
  "options": {
    "batch_size": 1000,
    "error_handling": "continue",
    "logging_level": "INFO"
  }
}