{
  "source": {
    "type": "rest_api",
    "base_url": "https://api.example.com",
    "endpoint": "/data",
    "auth_type": "bearer",
    "pagination": "offset"
  },
  "target": {
    "type": "csv",
    "file_path": "sample_data.csv",
    "delimiter": ",",
    "encoding": "utf-8"
  },
  "transformation": {
    "type": "aggregate",
    "group_by": [
      "category"
    ],
    "aggregations": [
      {
        "column": "amount",
        "function": "sum",
        "alias": "total_amount"
      },
      {
        "column": "id",
        "function": "count",
        "alias": "count"
      }
    ]
  },
  "options": {
    "batch_size": 1000,
    "error_handling": "continue",
    "logging_level": "INFO"
  }
}