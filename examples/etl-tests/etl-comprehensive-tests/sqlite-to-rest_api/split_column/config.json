{
  "source": {
    "type": "sqlite",
    "connection": "sqlite_connection_string"
  },
  "target": {
    "type": "rest_api",
    "base_url": "https://api.example.com",
    "endpoint": "/data",
    "auth_type": "bearer",
    "pagination": "offset"
  },
  "transformation": {
    "type": "split_column",
    "config": "split_column_specific_config"
  },
  "options": {
    "batch_size": 1000,
    "error_handling": "continue",
    "logging_level": "INFO"
  }
}